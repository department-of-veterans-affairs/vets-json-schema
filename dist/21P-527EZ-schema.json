      "properties": {
        "from": {
          "$ref": "#/definitions/date"
        },
        "to": {
          "$ref": "#/definitions/date"
        }
      }
    },
    "bankAccount": {
      "type": "object",
      "properties": {
        "accountType": {
          "type": "string",
          "enum": ["checking", "savings"]
        },
        "routingNumber": {
          "type": "string",
          "pattern": "^\\d{9}$"
        },
        "accountNumber": {
          "type": "string"
        },
        "bankName": {
          "type": "string"
        }
      }
    },
    "date": {
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "type": "string"
    },
    "incomeSources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["typeOfIncome", "receiver", "payer", "amount"],
        "properties": {
          "typeOfIncome": {
            "type": "string",
            "enum": ["SOCIAL_SECURITY", "INTEREST_DIVIDEND", "RETIREMENT", "PENSION", "OTHER"]
