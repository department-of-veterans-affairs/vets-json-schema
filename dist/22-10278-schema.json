                    true
                  ]
                }
              }
            },
            {
              "type": "object",
              "required": [
                "minor"
              ],
              "properties": {
                "minor": {
                  "enum": [
                    true
                  ]
                }
              }
            },
            {
              "type": "object",
              "required": [
                "other"
              ],
              "properties": {
                "other": {
                  "enum": [
                    true
                  ]
                }
              }
            }
          ]
        },
        {
          "anyOf": [
            {
              "type": "object",
              "not": {
                "properties": {
                  "other": {
                    "enum": [
                      true
                    ]
                  }
                },
                "required": [
                  "other"
                ]
              }
            },
            {
              "type": "object",
              "required": [
                "otherText"
              ],
              "properties": {
                "otherText": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 30
                }
              }
            }
          ]
        }
      ]
