{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "APPOINTMENT OF INDIVIDUAL AS CLAIMANT'S REPRESENTATIVE",
  "type": "object",
  "properties": {
    "veteran": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "type": "string",
              "minLength": 1,
              "maxLength": 12
            },
            "middle": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            },
            "last": {
              "type": "string",
              "minLength": 1,
              "maxLength": 18
            }
          },
          "required": [
            "first",
            "last"
          ]
        },
        "ssn": {
          "type": "string",
          "pattern": "^[0-9]{9}$"
        },
        "vaFileNumber": {
          "type": "string",
          "pattern": "^[cC]{0,1}\\d{7,9}$"
        },
        "dateOfBirth": {
          "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
          "type": "string"
        },
        "serviceNumber": {
          "type": "string",
          "pattern": "^[A-Z]{0,2}\\d{5,8}$"
        },
        "serviceBranch": {
          "type": "string",
          "enum": [
            "ARMY",
            "NAVY",
            "AIR_FORCE",
            "MARINE_CORPS",
            "COAST_GUARD",
            "SPACE_FORCE",
            "NOAA",
            "USPHS"
          ]
        },
        "address": {
          "type": "object",
          "properties": {
            "addressLine1": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30
            },
            "addressLine2": {
              "type": "string",
              "minLength": 1,
              "maxLength": 5
            },
            "city": {
              "type": "string",
              "minLength": 1,
              "maxLength": 18
            },
            "state_code": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2
            },
            "country": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3
            },
            "zip_code": {
              "type": "string",
              "pattern": "^\\d{5}$"
            },
            "zip_code_suffix": {
              "type": "string",
              "pattern": "^\\d{4}$"
            }
          },
          "required": [
            "addressLine1",
            "city",
            "state_code",
            "country",
            "zip_code"
          ]
        },
        "phone": {
          "type": "string",
          "pattern": "^[0-9]{10}$"
        },
        "email": {
          "type": "string",
          "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
        }
      },
      "required": [
        "name",
        "ssn",
        "dateOfBirth",
        "address",
        "phone"
      ]
    },
    "claimant": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "type": "string",
              "minLength": 1,
              "maxLength": 12
            },
            "middle": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            },
            "last": {
              "type": "string",
              "minLength": 1,
              "maxLength": 18
            }
          },
          "required": [
            "first",
            "last"
          ]
        },
        "dateOfBirth": {
          "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
          "type": "string"
        },
        "relationship": {
          "type": "string",
          "enum": [
            "spouse",
            "child"
          ]
        },
        "address": {
          "type": "object",
          "properties": {
            "addressLine1": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30
            },
            "addressLine2": {
              "type": "string",
              "minLength": 1,
              "maxLength": 5
            },
            "city": {
              "type": "string",
              "minLength": 1,
              "maxLength": 18
            },
            "state_code": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2
            },
            "country": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3
            },
            "zip_code": {
              "type": "string",
              "pattern": "^\\d{5}$"
            },
            "zip_code_suffix": {
              "type": "string",
              "pattern": "^\\d{4}$"
            }
          },
          "required": [
            "addressLine1",
            "city",
            "state_code",
            "country",
            "zip_code"
          ]
        },
        "phone": {
          "type": "string",
          "pattern": "^[0-9]{10}$"
        },
        "email": {
          "type": "string",
          "pattern": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
        }
      },
      "required": [
        "name",
        "dateOfBirth",
        "relationship",
        "address",
        "phone"
      ]
    },
    "representative": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    },
    "recordConsent": {
      "type": "boolean"
    },
    "consentAddressChange": {
      "type": "boolean"
    },
    "consentLimits": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ALCOHOLISM",
          "DRUG_ABUSE",
          "HIV",
          "SICKLE_CELL"
        ]
      }
    }
  },
  "required": [
    "veteran",
    "representative",
    "recordConsent",
    "consentAddressChange",
    "consentLimits"
  ]
}
