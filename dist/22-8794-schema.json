{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Designation Of Certifying Official(S) (22-8794)",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "date": {
      "pattern": "^(\\d{4}|XXXX)-(0[1-9]|1[0-2]|XX)-(0[1-9]|[1-2][0-9]|3[0-1]|XX)$",
      "type": "string"
    },
    "fullNameNoSuffix": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "first",
        "last"
      ],
      "properties": {
        "first": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "middle": {
          "type": "string",
          "maxLength": 30
        },
        "last": {
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        }
      }
    },
    "yesNoSchema": {
      "type": "boolean"
    },
    "email": {
      "type": "string",
      "maxLength": 256,
      "format": "email"
    },
    "profileAddress": {
      "type": "object",
      "properties": {
        "isMilitary": {
          "type": "boolean"
        },
        "view:militaryBaseDescription": {
          "type": "object",
          "properties": {}
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "pattern": "^(?!\\s*$).+"
        },
        "street": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "street2": {
          "type": "string",
          "maxLength": 100
        },
        "street3": {
          "type": "string",
          "maxLength": 100
        },
        "city": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "state": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "designatingOfficial",
    "institutionDetails",
    "primaryOfficialDetails",
    "statementOfTruthSignature",
    "dateSigned"
  ],
  "properties": {
    "designatingOfficial": {
      "type": "object",
      "required": [
        "fullName",
        "title",
        "emailAddress"
      ],
      "properties": {
        "fullName": {
          "$ref": "#/definitions/fullNameNoSuffix"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "phoneNumber": {
          "type": "string"
        },
        "internationalPhoneNumber": {
          "type": "string"
        },
        "emailAddress": {
          "type": "string",
          "maxLength": 256,
          "format": "email"
        }
      }
    },
    "institutionDetails": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "institutionName",
        "hasVaFacilityCode",
        "institutionAddress"
      ],
      "properties": {
        "hasVaFacilityCode": {
          "type": "boolean"
        },
        "facilityCode": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^[a-zA-Z0-9]{8}$"
            },
            {
              "type": "string",
              "enum": [
                ""
              ]
            }
          ]
        },
        "institutionName": {
          "type": "string"
        },
        "institutionAddress": {
          "$ref": "#/definitions/profileAddress"
        }
      },
      "allOf": [
        {
          "anyOf": [
            {
              "type": "object",
              "not": {
                "properties": {
                  "hasVaFacilityCode": {
                    "enum": [
                      true
                    ]
                  }
                },
                "required": [
                  "hasVaFacilityCode"
                ]
              }
            },
            {
              "type": "object",
              "required": [
                "facilityCode"
              ],
              "properties": {
                "facilityCode": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9]{8}$"
                }
              }
            }
          ]
        }
      ]
    },
    "primaryOfficialDetails": {
      "type": "object",
      "required": [
        "fullName",
        "title",
        "emailAddress"
      ],
      "properties": {
        "fullName": {
          "$ref": "#/definitions/fullNameNoSuffix"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "phoneNumber": {
          "type": "string"
        },
        "internationalPhoneNumber": {
          "type": "string"
        },
        "emailAddress": {
          "type": "string",
          "maxLength": 256,
          "format": "email"
        }
      }
    },
    "primaryOfficialTraining": {
      "type": "object",
      "required": [
        "trainingCompletionDate",
        "trainingExempt"
      ],
      "properties": {
        "trainingCompletionDate": {
          "type": "string",
          "format": "date"
        },
        "trainingExempt": {
          "type": "boolean"
        }
      }
    },
    "primaryOfficialBenefitStatus": {
      "type": "object",
      "required": [
        "hasVaEducationBenefits"
      ],
      "properties": {
        "hasVaEducationBenefits": {
          "type": "boolean"
        }
      }
    },
    "additionalCertifyingOfficials": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "additionalCertifyingOfficialsDetails"
        ],
        "properties": {
          "additionalCertifyingOfficialsDetails": {
            "type": "object",
            "required": [
              "fullName",
              "title",
              "emailAddress"
            ],
            "properties": {
              "fullName": {
                "$ref": "#/definitions/fullNameNoSuffix"
              },
              "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              "phoneNumber": {
                "type": "string"
              },
              "internationalPhoneNumber": {
                "type": "string"
              },
              "emailAddress": {
                "type": "string",
                "maxLength": 256,
                "format": "email"
              },
              "trainingCompletionDate": {
                "type": "string",
                "format": "date"
              },
              "hasVaEducationBenefits": {
                "type": "boolean"
              },
              "trainingExempt": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "hasReadOnlyCertifyingOfficial": {
      "type": "boolean"
    },
    "readOnlyCertifyingOfficial": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "fullName"
        ],
        "properties": {
          "fullName": {
            "$ref": "#/definitions/fullNameNoSuffix"
          }
        }
      }
    },
    "remarks": {
      "type": "string",
      "maxLength": 500
    },
    "statementOfTruthSignature": {
      "type": "string"
    },
    "dateSigned": {
      "$ref": "#/definitions/date"
    }
  }
}
