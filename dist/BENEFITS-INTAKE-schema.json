{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "veteran": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ssn": {
          "type": "string",
          "pattern": "^\\d{9}$",
          "example": "796126859"
        },
        "dateOfBirth": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "format": "date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "1932-02-05"
            }
          ]
        },
        "postalCode": {
          "type": "string",
          "pattern": "^\\d{5}$",
          "example": "12345"
        },
        "name": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "first": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30,
              "example": "Hector"
            },
            "last": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30,
              "example": "Allen"
            }
          },
          "required": [
            "first",
            "last"
          ]
        }
      },
      "required": [
        "ssn",
        "dateOfBirth",
        "postalCode",
        "name"
      ]
    },
    "dependent": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "ssn": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^\\d{9}$",
              "example": "796229088"
            }
          ]
        },
        "dateOfBirth": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "format": "date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "1976-01-16"
            }
          ]
        },
        "name": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "first": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 30,
                  "example": "Derrick"
                }
              ]
            },
            "last": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 30,
                  "example": "Reid"
                }
              ]
            }
          },
          "required": [
            "first",
            "last"
          ]
        }
      },
      "required": [
        "ssn",
        "dateOfBirth",
        "name"
      ]
    }
  },
  "required": [
    "veteran",
    "dependent"
  ]
}
